<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.chabicht.codeintelligence.preferences.CodeIntelligencePreferencePage"
            id="com.chabicht.codeintelligence.preferences.CodeIntelligencePreferencePage"
            name="Code Intelligence">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.chabicht.codeintelligence.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.javaCompletionProposalComputer"
         id="com.chabicht.code_intelligence.completions"
         name="Code Intelligence">
		<proposalCategory
			icon="/icons/completion.png"/>
		<javaCompletionProposalComputer
			requiresUIThread="false"
			class="com.chabicht.code_intelligence.completion.CodeIntelligenceCompletionProposalComputer"
			categoryId="com.chabicht.code_intelligence.completions"
			needsSortingAfterFiltering="true"
			activate="true">
				<partition type="__dftl_partition_content_type"/>
				<partition type="__java_string"/>
				<partition type="__java_singleline_comment"/> <!-- to get NLS templates -->
		</javaCompletionProposalComputer>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.chabicht.code_intelligence.changelistener.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.chabicht.code_intelligence"
            class="com.chabicht.code_intelligence.chat.ChatView"
            icon="icons/completion.png"
            id="com.chabicht.code_intelligence.chat.ChatView"
            name="Code Intelligence Chat"
            restorable="true">
      </view>
      <category
            id="com.chabicht.code_intelligence"
            name="Code Intelligence">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.chabicht.code_intelligence.chat.AddFileToContextCommand"
            id="com.chabicht.code-intelligence.command.AddFileToContextCommand"
            name="Add file to context">
      </command>
      <command
            defaultHandler="com.chabicht.code_intelligence.chat.AddSelectionToContextCommand"
            id="com.chabicht.code-intelligence.command.AddSelectionToContextCommand"
            name="Add selection to context">
      </command>
      <command
            defaultHandler="com.chabicht.code_intelligence.chat.AddSearchResultsToContextCommand"
            id="com.chabicht.code-intelligence.command.AddSearchResultsToContextCommand"
            name="Add search results to context">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:#CompilationUnitEditorContext?before=additions">
         <command
               commandId="com.chabicht.code-intelligence.command.AddSelectionToContextCommand"
               icon="icons/completion.png"
               label="Add selection to context"
               style="push">
         </command>
      </menuContribution>

      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.search.ui.views.SearchView">
         <command
               commandId="com.chabicht.code-intelligence.command.AddSearchResultsToContextCommand"
               icon="icons/completion.png"
               label="Add selectin to context"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="com.chabicht.code-intelligence.command.AddSearchResultsToContextCommand"
               icon="icons/completion.png"
               label="Add selection to context"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="com.chabicht.code-intelligence.command.AddSearchResultsToContextCommand"
               icon="icons/completion.png"
               label="Add selection to context"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
